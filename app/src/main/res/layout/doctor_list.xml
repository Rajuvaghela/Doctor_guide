<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <example.com.doctor_guide.util.RoundImageView
            android:id="@+id/subcat_thumbnail"
            android:layout_width="@dimen/fivezero"
            android:layout_height="@dimen/fivezero"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:src="@drawable/doctor_slider" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/subcat_thumbnail"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/subcat_thumbnail"
            android:drawableRight="@drawable/ic_rightside12"
            android:padding="@dimen/onezero"
            android:text="text"
            android:textColor="#313131"
            android:textSize="18dp" />
    </LinearLayout>

    <!-- Thumbnail Image -->


    <!-- Movie Title -->


</RelativeLayout>