<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentScrim="#fcf8f8"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:titleEnabled="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_collapseMode="parallax">


                        <ImageView
                            android:id="@+id/doctor_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_230sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/doctor_slider" />


                    </RelativeLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"

                        app:layout_collapseMode="pin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"

                            android:orientation="horizontal"
                            android:weightSum="5">
                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/iv_back"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/back" />



                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ll_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/iv_profile"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/new_about" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_detail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/iv_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/new_detail" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_gallaery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView

                                    android:id="@+id/iv_gallery"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/new_gallery" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_like"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/iv_like"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/new_pdf" />

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.Toolbar>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_gallery_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:visibility="gone"
                        android:weightSum="2">

                        <Button

                            android:id="@+id/btn_gallery_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_full"
                            android:gravity="center"
                            android:stateListAnimator="@drawable/state_list_animator_z"
                            android:text="Photo"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <Button

                            android:id="@+id/btn_gallery_video"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_full"
                            android:gravity="center"
                            android:stateListAnimator="@drawable/state_list_animator_z"
                            android:text="Video"
                            android:textAllCaps="false"

                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <include
                        android:id="@+id/inclide_profile"
                        layout="@layout/include_extra_detail"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/lndummy"
                        layout="@layout/include_extra_detail_moreinfo"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/ll_doctor_gellary"
                        layout="@layout/include_doctor_gallary"
                        android:visibility="gone" />

                    <include

                        android:id="@+id/ll_doctor_video"
                        layout="@layout/include_doctor_gallary_video"
                        android:visibility="gone" />


                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>


        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f01326"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/calling_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/call" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/map_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/map" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView

                android:id="@+id/share_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="@dimen/_10sdp"
                android:src="@drawable/share" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/rate_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/star" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
