<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/fivezero"
            android:layout_height="@dimen/fivezero"
            android:padding="@dimen/onezero"
            android:src="@drawable/pdf" />

        <TextView
            android:id="@+id/tv_doc_brocher_name"
            android:layout_width="@dimen/twotwozero"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="@dimen/onezero"
            android:text="" />

        <ImageView
            android:id="@+id/iv_download_brocher"
            android:layout_width="@dimen/fivezero"
            android:layout_height="@dimen/fivezero"
            android:padding="@dimen/onezero"
            android:src="@drawable/download_pdf" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_adapter"
        android:background="#d4d4d4">

    </View>

</RelativeLayout>