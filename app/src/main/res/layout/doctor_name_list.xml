<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardElevation="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|top"
                android:layout_weight=".6"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingTop="5dp">

                <example.com.doctor_guide.util.RoundImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/docttt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="bottom"
                        android:fontFamily="sans-serif"
                        android:gravity="bottom"
                        android:paddingLeft="1dp"
                        android:paddingTop="1dp"
                        android:text="Darshika"
                        android:textSize="16dp"
                        android:textColor="#161616"
                        />

                    <TextView
                        android:id="@+id/mname"
                        android:layout_gravity="bottom"
                        android:fontFamily="sans-serif"
                        android:gravity="bottom"
                        android:paddingLeft="1dp"
                        android:paddingTop="1dp"
                        android:textColor="#161616"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:padding="3dp"/>

                    <TextView

                        android:id="@+id/lname"
                        android:layout_gravity="bottom"
                        android:fontFamily="sans-serif"
                        android:gravity="bottom"
                        android:paddingLeft="1dp"
                        android:paddingTop="1dp"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#161616"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:padding="3dp"/>







                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.8"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".9"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".4"
                                android:gravity="center"
                                android:paddingLeft="1dp"
                                >

                                <TextView
                                    android:layout_width="35dp"
                                    android:layout_height="wrap_content"
                                    android:background="@color/background"
                                    android:gravity="center"
                                    android:paddingRight="3dp"
                                    android:text="3.9"
                                    android:textColor="#ffff" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.6">

                                <RatingBar
                                    android:id="@+id/ratebar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:stepSize="1.0"
                                    android:rating="2.0" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:singleLine="true"
                                android:text="darshika dddddd dddddddd" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sixzero"
                        android:layout_weight="0.80"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:layout_weight="1.5"
                            android:gravity="bottom"
                            android:paddingLeft="2dp"
                            android:paddingRight="5dp">

                            <Button
                                android:id="@+id/btnreadmore"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/btn_shap"
                                android:text="More..."
                                android:layout_marginRight="@dimen/five"
                                android:layout_marginBottom="@dimen/five"
                                android:textColor="#ffff" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5">

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>