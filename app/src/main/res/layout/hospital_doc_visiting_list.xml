<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctor Name"
        android:textColor="@color/black"
        android:textSize="@dimen/onefour" />

    <EditText

        android:id="@+id/edt_degreename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/six"

        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/onetwo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight"
        android:text="Doctor Speciality"
        android:textColor="@color/black"
        android:textSize="@dimen/onefour" />

    <EditText
        android:id="@+id/edt_univercity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/six"

        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/onetwo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight"
        android:text="Visiting Day"
        android:textColor="@color/black"
        android:textSize="@dimen/onefour" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/six"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/onetwo" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight"
        android:text="Visiting Start Time"
        android:textColor="@color/black"
        android:textSize="@dimen/onefour" />

    <EditText

        android:id="@+id/edt_startdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/six"

        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/onetwo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight"
        android:text="Visiting End Time"
        android:textColor="@color/black"
        android:textSize="@dimen/onefour" />

    <EditText

        android:id="@+id/edt_compdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/six"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/onetwo" />


</LinearLayout>